<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title – приложение ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Главная", "General", "General")</li>
                    <li>
                        @Html.ActionLink("Справочники", "General", "General")
                        <ul class="nav navbar-nav">
                            <li>@Html.ActionLink("Клиенты", "Buyer", "Buyer")</li>
                            <li>@Html.ActionLink("Элементы", "Elements", "Elements")</li>
                            <li>@Html.ActionLink("Суши", "Ingredients", "Ingredients")</li>
                            <li>@Html.ActionLink("Повора", "Kitcheners", "Kitcheners")</li>
                            <li>@Html.ActionLink("Склады", "ProductStorages", "ProductStorages")</li>
                        </ul>
                    </li>
                    <li>
                        @Html.ActionLink("Отчеты", "General", "General")
                        <ul class="nav navbar-nav">
                            <li>@Html.ActionLink("Заказы", "Reports", "Reports")</li>
                            <li>@Html.ActionLink("Загруженность складов", "Reports", "Reports1")</li>
                            <li>@Html.ActionLink("Прайс изделий", "Reports", "Reports2")</li>
                        </ul>
                    </li>
                    <li>@Html.ActionLink("Склады", "PutOnProductStorage", "PutOnProductStorage")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year – приложение ASP.NET</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
